<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:map="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/map"
          tools:context=".Controller.MapsActivity"
          android:name="com.google.android.gms.maps.SupportMapFragment">

    <TextView
            android:id="@+id/msgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="@string/msg_location_service_not_started" />

    <Button
            android:id="@+id/btn_start_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:enabled="true"
            android:onClick="startClicked"
            android:text="@string/start"
            android:textSize="15sp" />

    <Button
            android:id="@+id/btn_stop_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp"
            android:enabled="false"
            android:onClick="stopClicked"
            android:text="@string/finish"
            android:textSize="15sp" />

    <Button
            android:id="@+id/btn_mark_cul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:enabled="false"
            android:onClick="markClicked"
            android:text="@string/mark"
            android:textSize="15sp" />

    <Button
            android:id="@+id/btn_report_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:enabled="false"
            android:onClick="foundClicked"
            android:text="@string/found"
            android:textSize="15sp"
            android:visibility="invisible" />

    <Button
            android:id="@+id/btn_restart_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:enabled="false"
            android:onClick="restartClicked"
            android:text="@string/restart"
            android:textSize="15sp"
            android:visibility="invisible" />

    <ImageView
            android:id="@+id/targetImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|center"
            android:src="@mipmap/target"
            android:visibility="invisible" />

    <ImageButton
            android:id="@+id/helpImageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|start"
            android:layout_margin="10dp"
            android:onClick="helpClicked"
            android:src="@android:drawable/ic_menu_help"
            android:visibility="visible" />

</fragment>